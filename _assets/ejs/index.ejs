                    <% for (let i in openInfo) { %>
                      <li class="home-news__item js-news-post">
                        <a href="<%- openInfo[i].url; %>" class="p-post">
                          <figure class="p-post__image">
                            <img src="<%= openInfo[i].imgSrc; %>" alt="<%= openInfo[i].imgAlt; %>">
                          </figure><!-- /.p-post__image -->
                          <div class="p-post__body">
                            <time datetime="<%- openInfo[i].timeAttr; %>" class="p-post__published">
                              <%- openInfo[i].timeStr; %>
                            </time>
                            <h3 class="p-post__title">
                              <%- openInfo[i].title; %>
                            </h3>
                          </div><!-- /.p-post__body -->
                        </a><!-- /.p-post -->
                      </li><!-- /.home-news__item -->
                      <% } %>
                  </ul><!-- /.home-news__items -->
              </div><!-- /.home-news__panel -->

              <div class="home-news__panel js-panel">
                <% const others=[ { url: '#' , imgSrc: '/img/home/news01.jpg' , imgAlt: '石井花壇感謝祭の開催について' ,
                  timeAttr: '2020-11-20' , timeStr: '2020.11.20' , title: '石井花壇感謝祭の開催について' }, { url: '#' ,
                  imgSrc: '/img/home/news01.jpg' , imgAlt: '露天風呂無料解放のお知らせ' , timeAttr: '2020-11-15' ,
                  timeStr: '2020.11.15' , title: '露天風呂無料解放のお知らせ' , }, { url: '#' , imgSrc: '/img/home/news01.jpg' ,
                  imgAlt: '石井花壇ウェブサイト、メンテナンスのお知らせ' , timeAttr: '2020-11-05' , timeStr: '2020.11.05' ,
                  title: '石井花壇ウェブサイト、メンテナンスのお知らせ' , }, ] %>
                  <ul class="home-news__items">
                    <% for (let i in others) { %>
                      <li class="home-news__item">
                        <a href="<%- others[i].url; %>" class="p-post">
                          <figure class="p-post__image">
                            <img src="<%- others[i].imgSrc; %>" alt="<%- others[i].imgAlt; %>">
                          </figure><!-- /.p-post__image -->
                          <div class="p-post__body">
                            <time datetime="<%- others[i].timeAttr; %>" class="p-post__published">
                              <%- others[i].timeStr; %>
                            </time>
                            <h3 class="p-post__title">
                              <%- others[i].title; %>
                            </h3>
                          </div><!-- /.p-post__body -->
                        </a><!-- /.p-post -->
                      </li><!-- /.home-news__item -->
                      <% } %>
                  </ul><!-- /.home-news__items -->
              </div><!-- /.home-news__panel -->
            </div><!-- /.home-news__area -->
