<% let pageId='home' ; %>

  <%- include('./common/_header', {pageId:pageId }) %>

    <%# console.log(jsonData) %>
      <main class="l-home">
        <div class="l-home__mv l-home-mv home-mv">
          <div class="swiper home-mv__slider home-mv-slider js-top-mv-slider">
            <% const mvImg=[ { imgSrc: '/img/home/mainbg01.jpg' , }, { imgSrc: '/img/home/mainbg02.jpg' , }, {
              imgSrc: '/img/home/mainbg03.jpg' , }, ] %>
              <div class="swiper-wrapper home-mv-slider__slides">
                <% for (let i in mvImg) { %>
                  <div class="swiper-slide home-mv-slider__slide">
                    <div class="home-mv-slider__image">
                      <img src="<%= mvImg[i].imgSrc; %>" alt="">
                    </div><!-- /.home-mv-slider__image -->
                  </div><!-- /.swiper-slide home-mv-slider__slide -->
                  <% } %>
              </div><!-- /.swiper-wrapper home-mv-slider__slides -->
          </div><!-- /.swiper home-mv__slider home-mv-slider -->

          <h2 class="home-mv__title">
            <span>頑張る人の</span>
            <span>頑張らない時間</span>
          </h2><!-- /.home-mv__title -->
        </div><!-- /.l-home__mv l-home-mv home-mv -->

        <div class="l-home__concept l-home-concept home-concept">
          <div class="l-container home-concept__container">
            <div class="home-concept__inner">
              <p class="home-concept__lead js-concept-text">
                <span>温海温泉の</span>
                <span>美しさに癒やされて</span>
              </p><!-- /.home-concept__lead -->

              <p class="home-concept__description js-concept-text">
                <span>東北の奥座敷である温海温泉郷</span>
                <span>開湯は約1300年前とされ、役小角が</span>
                <span>発見したと伝えられます</span>
              </p><!-- /.home-concept__description -->

              <p class="home-concept__description js-concept-text">
                <span>石井花壇は江戸より続く由緒ある旅館で</span>
                <span>クラシックな作りの中に大正ロマンあふれる</span>
                <span>内装を残しております</span>
              </p><!-- /.home-concept__description -->

              <p class="home-concept__description js-concept-text">
                <span>圧倒的癒やしの空間で</span>
                <span>頑張る現代人に</span>
                <span>頑張らない圧倒的な非日常をご提供します</span>
              </p><!-- /.home-concept__description -->

              <p class="home-concept__signature js-concept-text">石井花壇</p>
            </div><!-- /.home-concept__inner -->
          </div><!-- /.l-container home-concept__container -->
        </div><!-- /.l-home__concept l-home-concept home-concept -->

        <div class="l-home__features l-home-features home-features">
          <% const feature=[ { imgSrc: '/img/home/oheya-home.jpg' , imgAlt: '' , lead: '喧騒から離れた空間<br>心落ち着く至極のひととき' ,
            description: 'まるで時が止まったかのような、圧倒的な静寂のなかで、<br class="u-hidden-sp">ひたすらにゆったりと…。<br>最高級の「何もしない時間」をお過ごしください。' , url: jsonData.pages.oheya.slug , button: 'お部屋について' ,
            }, { imgSrc: '/img/home/menu-home.jpg' , imgAlt: '' , lead: '出迎えるのは<br>極上の温海料理' ,
            description: '最も旬の食材を愉しむ、最高の贅沢を<br class="u-hidden-sp">最高級A5ランクの米沢牛と共に頂く。<br>あなたの人生史に残る「極上の感動」を<br class="u-hidden-sp">お約束します。' , url: jsonData.pages.menu.slug , button: '料理について' ,
            }, { imgSrc: '/img/home/onsen-home.jpg' , imgAlt: '' , lead: '疲れ切った身体にやすらぎを<br>温海の源泉に癒やされて' ,
            description: '古くは弘法大師の病をも治療したと言われる熱海の泉質。<br>現代人の疲弊しきった身体を修復する最高級の湯治場として<br class="u-hidden-sp">ご活用ください。' , url: jsonData.pages.onsen.slug , button: '温泉について' , },
            ] %>
            <ul class="home-features__items">
              <% for (let i in feature) { %>
                <li
                  class="home-features__item home-features-media js-features-item">
                  <figure class="home-features-media__image js-features-image-wrapper js-features-image-wrapper">
                    <img src="<%- feature[i].imgSrc; %>" alt="<%- feature[i].imgAlt; %>" class="js-features-image">
                    <div class="home-features-media__extend-bg js-features-extend-bg"></div>
                  </figure><!-- /.home-features-media__image -->
                  <div class="home-features-media__body js-features-body">
                    <p class="home-features-media__lead">
                      <%- feature[i].lead; %>
                    </p>
                    <p class="home-features-media__description">
                      <%- feature[i].description; %>
                    </p>
                    <div class="home-features-media__button-wrapper">
                      <a href="<%- feature[i].url; %>" class="home-features-media__button c-button">
                        <%- feature[i].button; %>
                      </a>
                    </div><!-- /.home-features-media__button-wrapper -->
                  </div><!-- /.home-features-media__body -->
                </li><!-- /.home-features__item home-features-media -->
                <% } %>
            </ul><!-- /.home-features__items -->
        </div><!-- /.l-home__features l-home-features home-features -->

        <section class="l-home__recommended l-home-recommended home-recommended">
          <div class="l-container home-recommended__container">
            <h2 class="home-recommended__title p-section-title js-section-title">
              <img src="/img/common/section-logo.png" alt="">
              <span>おすすめご宿泊プラン</span>
            </h2><!-- /.home-recommended__title p-section-title -->

            <% const recommended=[ { url: '#' , imgSrc: '/img/home/recommended01.jpg' , imgAlt: '' ,
              title: '朝食付きプラン、日本近海で取れたのどぐろを朝食として…' , description: '最高級と称されるのどぐろ、正式には「アカムツ」と呼ばれる魚、味は独特の上品な味わいで、焼いても煮ても美味'
              , }, { url: '#' , imgSrc: '/img/home/recommended02.jpg' , imgAlt: '' , title: '【期間限定】熱海蟹をたっぷりと愉しむプラン。' ,
              description: '温海で水揚げされた蟹は「温海蟹」として知られ、嗜好品として愛されてきました。この宿泊プランでは存分に' , }, { url: '#' ,
              imgSrc: '/img/home/recommended03.jpg' , imgAlt: '' , title: '【平日限定】贅沢美味懐石プラン。海辺の四季旬彩プラン。' ,
              description: '熱海近海で取れた魚を鮮度そのままに舟盛りにしてご提供。生きた味をお楽しみください。' , }, ] %>
              <ul class="home-recommended__items">
                <% for (let i in recommended) { %>
                  <li class="home-recommended__item js-recommended-card">
                    <a href="#" class="p-recommended-card">
                      <figure class="p-recommended-card__image">
                        <img src="<%= recommended[i].imgSrc; %>" alt="<%= recommended[i].imgAlt; %>">
                      </figure><!-- /.p-recommended-card__image -->
                      <div class="p-recommended-card__body">
                        <h3 class="p-recommended-card__title">
                          <%= recommended[i].title; %>
                        </h3>
                        <p class="p-recommended-card__description">
                          <%= recommended[i].description; %>
                        </p>
                      </div><!-- /.p-recommended-card__body -->
                    </a><!-- /.p-recommended-card -->
                  </li><!-- /.home-recommended__item -->
                  <% } %>
              </ul><!-- /.home-recommended__items -->
          </div><!-- /.l-container home-recommended__container -->
        </section><!-- /.l-home__recommended l-home-recommended home-recommended -->

        <section class="l-home__news l-home-news home-news">
          <div class="l-container home-news__container">
            <h2 class="home-news__title p-section-title js-section-title">
              <img src="/img/common/section-logo.png" alt="">
              <span>お知らせ</span>
            </h2><!-- /.home-news__title p-section-title -->

            <ul class="home-news__tabs js-news-tabs">
              <li class="home-news__tab is-active js-tab">営業情報</li>
              <li class="home-news__tab js-tab">その他</li>
            </ul><!-- /.home-news__tabs -->

